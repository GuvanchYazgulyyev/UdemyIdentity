                        <a class="btn btn-success m-1" asp-controller="Member" asp-action="Yonetici">Yönetici  Sayfa</a>

                    </li>
                    <li class="nav-item">
                        <a class="btn btn-success m-1" asp-controller="Member" asp-action="Editor">Editör  Sayfa</a>

                    </li>
                    <li class="nav-item">
                        <a class="btn btn-success m-1" asp-controller="Member" asp-action="AnkaraPage">Şehir Ankara Sayfa</a>

                    </li>
                    <li class="nav-item">
                        <a class="btn btn-success m-1" asp-controller="Member" asp-action="AgePage">Yaş Sınır Sayfa</a>

                    </li>
                    <li class="nav-item">
                        <a class="btn btn-success m-1" asp-controller="Member" asp-action="ExchangeRedirect">Borsa Bilgi</a>

                    </li>
                    <li>
                        <a class="btn btn-success m-1" asp-controller="Member" asp-action="PasswordChange">Şifre Degiştirme</a>
                    </li>
                    <li>
                        <a class="btn btn-info m-1" asp-controller="Member" asp-action="TwoFactorAut">Kimlik Dogrulama</a>
                    </li>
                    <li>
                        <a class="btn btn-success m-1" asp-controller="Member" asp-action="LogOut" asp-route-returnUrl="/Home/Index">Çıkış Yap</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>


